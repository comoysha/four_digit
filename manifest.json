{
  "manifest_version": 3,
  "name": "Four Digit Separator",
  "version": "1.0",
  "description": "Separate numbers with four digit separators",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"  
    }
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}